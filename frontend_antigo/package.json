{
  "name": "youtube-downloader",
  "version": "1.0.0",
  "description": "YouTube Music Downloader",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "npm run dev",
    "build": "vite build",
    "clean": "rimraf dist",
    "build_app": "docker-compose -f ../Docker-compose.yaml up -d --build",
    "start_app": "docker compose -f ../Docker-compose.yaml up",
    "setup-python": "setup-python.bat"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.youtubedownloader.app",
    "productName": "YouTube Music Downloader",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      },
      {
        "from": "python_embed",
        "to": "python"
      }
    ],
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico"
    },
    "msi": {
      "warningsAsErrors": false
    }
  }
}
